<UserControl x:Class="SwordAndFairy7Translator.Views.ProgressDialog.ProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SwordAndFairy7Translator.Views.ProgressDialog"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Foreground="White"
             Background="Transparent"
             IsHitTestVisible="False"
             mc:Ignorable="d">
    <HeaderedContentControl HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Header="{Binding}">
        <ProgressBar Width="600"
                     Height="8"
                     IsIndeterminate="True" />
    </HeaderedContentControl>
</UserControl>
